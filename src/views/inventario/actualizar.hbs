<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Actualizacion de Libros
                </div>
                <div class="card-body">
                        {{#each producto}}
                    <form action="/inventario/editar/{{idUsuariosLibros}}" method="post">
                        <div class="form-group">
                            <label for="nombre">Nombre del Libro</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="{{nombre}}">
                        </div>
                        <div class="form-group">
                            <label for="autor">Autor</label>
                            <input type="text" class="form-control" id="autor" name="autor" value="{{autor}}" required>
                        </div>
                        <div class="form-group">
                            <label for="precio">Precio</label>
                            <input type="number" class="form-control" id="precio" name="precio" value="{{precio}}"
                                required min="0">
                        </div>
                        <div class="form-group">
                            <label for="cantidad">Cantidad</label>
                            <input type="number" class="form-control" id="cantidad" name="cantidad" value="{{cantidad}}"
                                required min="0">
                        </div>
                        {{/each}}
                        <div class="form-group">
                            <label for="genero">GÃ©nero</label>
                            <select class="form-control" id="genero" name="genero">
                                {{#each generos}}
                                <option value="{{idGenero}}">{{nombreGenero}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Actualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
